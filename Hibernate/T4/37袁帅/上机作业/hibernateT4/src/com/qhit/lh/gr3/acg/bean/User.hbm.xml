<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.qhit.lh.gr3.acg.bean.User" table="t_user">
		<id name="uid" column="uid" type="integer">
			<generator class="foregin">
				<param name="property">emp</param>
			</generator>
		</id>
		<property name="uname" column="uname" type="string"></property>
		<property name="password" column="password" type="string"></property>
		<!-- 一对一关系映射 -->
		<one-to-one name="emp" class="com.qhit.lh.gr3.acg.bean.Emp" cascade="all"></one-to-one>
	</class>
</hibernate-mapping>
